<% layout('admin/layout.ejs')%>
<div class="mod-article-list">
    <table>
        <thead>
        <tr>
            <th>#</th>
            <th class="title">标题</th>
            <th>点击量</th>
            <th>发布人</th>
            <th>日期</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <%list_datas.forEach(function(v,i){%>
        <tr>
            <td><%=(curPage-1)*pageSize+(i+1)%></td>
            <td class="title"><a href="/detail/<%=v._id%>?type=<%=v.type%>" target="_blank" title="<%=v.title%>"><%=v.title%></a></td>
            <td><%=v.view%></td>
            <td><%=v.author%></td>
            <td><%=v.createAt%></td>
            <td>
                <a href="/admin/editor?id=<%=v._id%>" data-id="<%=v._id%>" data-title="<%=v.title%>" class="btn btn-editor">编辑</a>
                <a href="javascript:" data-id="<%=v._id%>" data-title="<%=v.title%>" class="btn btn-remove">删除</a>
            </td>
        </tr>
        <%})%>
        </tbody>
    </table>
    <% include ../pager.ejs%>
</div>
